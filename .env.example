# Environment Configuration for Commission Reconciliation System
# Copy this file to .env and update with your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# PHI Scrubbing Configuration
# Set to 'true' to enable PHI scrubbing for privacy compliance and improved accuracy
# Set to 'false' to disable (not recommended for production with PHI data)
USE_PHI_SCRUBBING=true

# Azure OpenAI Configuration (for HIPAA compliance)
# Uncomment and configure these if using Azure OpenAI with BAA
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_key_here
# AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo-hipaa

# LandingAI ADE Configuration (for advanced document extraction)
VISION_AGENT_API_KEY=your_landingai_api_key_here
USE_LANDING_AI=true

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# System Configuration
LOG_LEVEL=INFO

# Privacy and Compliance Settings
PHI_SCRUBBING_LOG_LEVEL=INFO
PRIVACY_MODE=enabled

# Cost Monitoring
ENABLE_COST_TRACKING=true
MONTHLY_COST_LIMIT=100.00